OSG_BEGIN_NAMESPACE

template<class SingletonT>
SingletonT *SingletonHolder<SingletonT>::_the = NULL;

#define OSG_SINGLETON_INST(OSG_CLASS)                  \
template <> OSG_DLL_EXPORT                             \
bool SingletonHolder< OSG_CLASS >::destroy(void)       \
{                                                      \
    fprintf(stderr, "Destroy Singleton %p\n", _the);   \
                                                       \
    delete _the;                                       \
                                                       \
    _the = NULL;                                       \
                                                       \
    return true;                                       \
}                                                      \
                                                       \
template<> OSG_DLL_EXPORT                              \
OSG_CLASS *SingletonHolder< OSG_CLASS >::the(void)     \
{                                                      \
    if(_the == NULL)                                   \
    {                                                  \
        _the = new OSG_CLASS();                        \
                                                       \
        addPostFactoryExitFunction(&Self::destroy);    \
    }                                                  \
                                                       \
    return _the;                                       \
}                                                      \
                                                       \

